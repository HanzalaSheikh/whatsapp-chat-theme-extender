{
  "manifest_version": 3,
  "name": "WhatsApp Theme Extension",
  "version": "1.0",
  "description": "Customize WhatsApp Web chat themes with different styles.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://web.whatsapp.com/*"]
}
